<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".login.ui.LoginFragment">

    <ImageView
        android:id="@+id/bg_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:scaleX="1.8"
        android:scaleY="1.5"
        android:src="@drawable/bg_left" />

    <ImageView
        android:id="@+id/bg_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:src="@drawable/bg_right"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/otp_et_focused"
        android:clickable="false"
        android:cursorVisible="false"
        android:elevation="50dp"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/et2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bg_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/otp_et"
        android:clickable="false"
        android:cursorVisible="false"
        android:elevation="50dp"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/et1"
        app:layout_constraintEnd_toStartOf="@+id/et3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et1"
        app:layout_constraintTop_toTopOf="@+id/et1"
        app:layout_constraintVertical_bias="0.86" />

    <EditText
        android:id="@+id/et3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/otp_et"
        android:clickable="false"
        android:cursorVisible="false"
        android:elevation="50dp"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/et2"
        app:layout_constraintEnd_toStartOf="@+id/et4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et2"
        app:layout_constraintTop_toTopOf="@+id/et2" />

    <EditText
        android:id="@+id/et4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/otp_et"
        android:clickable="false"
        android:cursorVisible="false"
        android:elevation="50dp"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/et3"
        app:layout_constraintEnd_toStartOf="@+id/et5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et3"
        app:layout_constraintTop_toTopOf="@+id/et3" />

    <EditText
        android:id="@+id/et5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/otp_et"
        android:clickable="false"
        android:cursorVisible="false"
        android:elevation="50dp"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/et4"
        app:layout_constraintEnd_toStartOf="@+id/et6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et4"
        app:layout_constraintTop_toTopOf="@+id/et4" />

    <EditText
        android:id="@+id/et6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/otp_et"
        android:clickable="false"
        android:cursorVisible="false"
        android:elevation="50dp"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/et5"
        app:layout_constraintEnd_toStartOf="@+id/bg_left"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et5"
        app:layout_constraintTop_toTopOf="@+id/et5" />

    <TextView
        android:id="@+id/login_otp_button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_rounded"
        android:clickable="true"
        android:elevation="50dp"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/get_otp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et1" />
</androidx.constraintlayout.widget.ConstraintLayout>

